              <div class="col-12 col-lg-7 col-xl-9">
                <div class="py-2 px-4 border-left  d-none d-lg-block">
                  <div class="d-flex align-items-center py-1">
                    <div class="flex-grow-1 pl-3">
                      <h3><strong class="mb-2">Activity Name</strong></h3>
                      <div class="small border-bottom">Movie Name</div>
                    </div>
                  </div>
                </div>
                <!-- Message Box -->
                <div class="position-relative">
                  <div id="chat-room" class="chat-messages p-4 border-left">
                    <!-- Message Content -->
                    <div class="chat-message-left pb-4">
                      <div class="flex-shrink-1 bg-secondary rounded py-2 px-3 mr-3">
                        <div class="badge bg-dark text-nowrap mb-1">Johnson</div>
